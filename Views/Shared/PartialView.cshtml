@model Book


<div class="form-group">
    <label>ISBN: </label><input type="hidden" asp-for="bookId" class="form-control" />
    <input type="text" asp-for="ISBN" class="form-control" />
</div>
<div class="form-group">
    <label>Author Name: </label><input asp-for="AuthorName" class="form-control" />
</div>
<div class="form-group">
    <label>Book Title: </label><input asp-for="BookTitle" class="form-control" />
</div>
<div class="form-group">
    <label>$Price: </label><input asp-for="Amount" class="form-control" />
</div>
<div class="form-group">
    <label>Quantity: </label><input asp-for="Quantity" class="form-control" />
</div>




